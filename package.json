{
  "name": "assemble-desktop-app",
  "productName": "Assemble",
  "version": "1.0.84",
  "description": "Assemble Desktop App",
  "main": "main.cjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --mac",
    "build:dev": "cross-env NODE_ENV=development electron-builder build --mac",
    "build:local": "cross-env NODE_ENV=local electron-builder build --mac",
    "deploy": "electron-builder build --mac --publish always",
    "deploy:dev": "cross-env NODE_ENV=development electron-builder build --mac --publish always --config electron-builder.ci.json"
  },
  "build": {
    "appId": "tv.assemble",
    "productName": "Assemble",
    "publish": {
      "provider": "github",
      "owner": "Assemble-tv",
      "repo": "assemble-app-releases",
      "releaseType": "release"
    },
    "generateUpdatesFilesForAllChannels": true,
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "afterSign": "scripts/notarize.cjs",
    "dmg": {
      "icon": "assets/icons/dmg_installer.icns",
      "background": "assets/dmg_background.svg",
      "iconSize": 80,
      "contents": [
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 190,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    }
  },
  "author": "Assemble",
  "license": "ISC",
  "dependencies": {
    "@angular/fire": "^18.0.1",
    "dotenv": "^16.4.7",
    "electron-log": "^4.4.8",
    "electron-push-receiver": "^2.1.3",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.4",
    "firebase": "^11.3.1",
    "firebase-admin": "^13.0.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "cross-env": "^7.0.3",
    "electron": "25.9.0",
    "electron-builder": "^25.1.7"
  }
}
