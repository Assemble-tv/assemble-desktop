{
  "name": "assemble-desktop-app",
  "productName": "Assemble",
  "version": "1.0.64",
  "description": "Assemble Desktop App",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --mac --win",
    "deploy": "electron-builder build --mac --win --publish always"
  },
  "build": {
    "appId": "tv.assemble",
    "productName": "Assemble",
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets"
      }
      ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "Nathan Watkin (YY8VUW28TA)",
      "notarize": {
        "teamId": "YY8VUW28TA"
      }
    },
    "afterSign": "scripts/notarize.js",
    "dmg": {
      "icon": "assets/icons/dmg_installer.icns",
      "background": "assets/dmg_background.svg",
      "iconSize": 80,
      "contents": [
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 190,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "natewatkin21",
        "repo": "assemble-desktop"
      }
    ]
  },
  "author": "Assemble",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron-log": "^4.4.8",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.4"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "electron": "28.1.0",
    "electron-builder": "^25.1.7"
  }
}
